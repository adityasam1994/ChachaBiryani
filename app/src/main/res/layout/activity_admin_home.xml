<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--action bar-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/pinktop"
            android:translationZ="5dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ACCEPTED"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/muslim_imogi"
                android:visibility="invisible" />
        </LinearLayout>

        <!--action bar-->

        <LinearLayout
            android:id="@+id/emptylayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No accepted orders"
                android:textStyle="bold"
                android:textSize="24sp"
                android:background="@drawable/black_border"
                android:padding="10dp"
                android:textColor="@color/pinktop"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/darkgrey"
            android:fitsSystemWindows="true"
            android:foreground="?attr/selectableItemBackground"
            app:itemBackground="@drawable/background_selector"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="#dedede"
            android:theme="@style/menu_text_style"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_admin" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>